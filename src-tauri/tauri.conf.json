{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "neuralvault",
  "version": "0.1.0",
  "identifier": "com.hovsco.neuralvault",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "NeuralVault",
        "width": 1200,
        "height": 800
      },
      {
        "label": "hud",
        "title": "Quick Capture",
        "url": "index.html#/hud",
        "width": 680,
        "height": 220,
        "center": true,
        "resizable": false,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": true,
        "visible": false,
        "skipTaskbar": true,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
